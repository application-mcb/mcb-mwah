rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Students can read their own data
    match /students/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Teachers can read their own data
    match /teachers/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Registrars can read and write all data
    match /registrars/{registrarId} {
      allow read, write: if request.auth != null;
    }

    // Registrar tasks - registrars can only read/write their own tasks
    match /registrarTasks/{taskId} {
      allow read: if request.auth != null && 
        request.auth.uid == resource.data.registrarUid;
      
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.registrarUid;
      
      allow update, delete: if request.auth != null && 
        request.auth.uid == resource.data.registrarUid;
    }

    // Chat conversations
    match /chats/{chatId} {
      // Users can read chats they are participants in
      allow read: if request.auth != null && 
        request.auth.uid in resource.data.participants;
      
      // Users can create chats if they are a participant
      allow create: if request.auth != null && 
        request.auth.uid in request.resource.data.participants;
      
      // Users can update chats they are participants in
      allow update: if request.auth != null && 
        request.auth.uid in resource.data.participants;
      
      // Messages subcollection
      match /messages/{messageId} {
        // Users can read messages in chats they are participants in
        allow read: if request.auth != null && 
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
        
        // Users can create messages if they are a participant and the sender
        allow create: if request.auth != null && 
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants &&
          request.resource.data.senderId == request.auth.uid;
        
        // Users can update messages they sent (for read receipts)
        allow update: if request.auth != null && 
          request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }
    }

    // Allow read access to public data
    match /{document=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
